<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:id="basePane" maxHeight="1.7976931348623157E308"
          maxWidth="1.7976931348623157E308" prefHeight="800.0" prefWidth="1200.0"
          xmlns="http://javafx.com/javafx/11.0.1" fx:controller="seng202.group5.gui.stock.StockController">
  <columnConstraints>
      <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" prefWidth="800.0"/>
  </columnConstraints>
  <rowConstraints>
      <RowConstraints maxHeight="-Infinity" vgrow="SOMETIMES" />
      <RowConstraints maxHeight="1.7976931348623157E308" prefHeight="560.0" vgrow="ALWAYS"/>
      <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="60.0" vgrow="SOMETIMES" />
  </rowConstraints>
   <children>
       <HBox>
           <children>
               <Button fx:id="addButton" mnemonicParsing="false" onAction="#addIngredient" prefHeight="30.0"
                       prefWidth="118.0" text="Add"/>
               <Button fx:id="modifyButton" mnemonicParsing="false" onAction="#modifyIngredient" prefHeight="30.0"
                       prefWidth="118.0" text="Modify"/>
               <Button fx:id="removeButton" mnemonicParsing="false" onAction="#removeIngredient" prefHeight="30.0"
                       prefWidth="118.0" text="Remove"/>
               <Label fx:id="warningLabel" alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="769.0">
                   <font>
                       <Font size="18.0"/>
                   </font>
               </Label>
               <TextField fx:id="ingredientSearchField" prefHeight="30.0" prefWidth="172.0"
                          promptText="Search Ingredient ID"/>
           </children>
       </HBox>
       <TableView fx:id="stockTable" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                  prefHeight="200.0" prefWidth="200.0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1"
                  GridPane.vgrow="ALWAYS">
           <columns>
               <TableColumn fx:id="rowID" prefWidth="86.0" text="ID"/>
               <TableColumn fx:id="rowIngredient" prefWidth="223.0" text="Ingredients"/>
               <TableColumn fx:id="rowQuantity" prefWidth="142.0" text="Quantity"/>
               <TableColumn fx:id="rowCategory" minWidth="0.0" prefWidth="348.0" text="Category "/>
               <TableColumn fx:id="rowCost" prefWidth="219.0" text="Cost"/>
           </columns>
       </TableView>
      <GridPane maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefHeight="60.0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.vgrow="NEVER">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Button fx:id="launchOrderButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#launchOrderScreen" prefHeight="60.0" prefWidth="160.0" text="Order" />
            <Button fx:id="launchInvoiceButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#launchInvoiceScreen" prefHeight="60.0" prefWidth="160.0" text="Invoice" GridPane.columnIndex="1" />
            <Button disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="60.0" prefWidth="160.0" text="Stock" GridPane.columnIndex="2" />
             <Button fx:id="launchAdminButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#launchAdminScreen" prefHeight="60.0" prefWidth="160.0" text="Admin" GridPane.columnIndex="3" />
             <Button fx:id="launchHistoryButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#launchHistoryScreen" prefHeight="60.0" prefWidth="160.0" text="History" GridPane.columnIndex="4" />
         </children>
      </GridPane>
   </children>
</GridPane>
