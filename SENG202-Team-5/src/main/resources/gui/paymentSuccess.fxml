<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="600.0"
            stylesheets="@css/ifos-theme.css" xmlns="http://javafx.com/javafx/11.0.1"
            fx:controller="seng202.group5.gui.invoice.PaymentSuccessController">
    <top>
        <VBox alignment="CENTER" prefHeight="99.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <children>
                <Text fx:id="paymentText" strokeType="OUTSIDE" strokeWidth="0.0" text="Payment Successful!">
                    <font>
                        <Font size="24.0"/>
                    </font>
                </Text>
                <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
                    <children>
                        <Label text="Total Change:">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                        <Label fx:id="totalChangeLabel">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                    </children>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets top="10.0"/>
            </BorderPane.margin>
        </VBox>
    </top>
    <bottom>
        <JFXButton fx:id="okButton" onAction="#close" prefHeight="44.0" prefWidth="90.0" text="OK"
                   BorderPane.alignment="CENTER">
            <font>
                <Font size="18.0"/>
            </font>
            <BorderPane.margin>
                <Insets bottom="20.0"/>
            </BorderPane.margin>
        </JFXButton>
    </bottom>
    <center>
        <Text fx:id="changeLabel" strokeType="OUTSIDE" strokeWidth="0.0" text="Text" BorderPane.alignment="TOP_CENTER">
            <font>
                <Font size="18.0"/>
            </font>
        </Text>
    </center>
</BorderPane>
