<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
          minHeight="600.0" minWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1"
          fx:controller="seng202.group5.gui.history.HistoryController">
  <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
  </columnConstraints>
  <rowConstraints>
      <RowConstraints maxHeight="1.7976931348623157E308" vgrow="SOMETIMES"/>
      <RowConstraints maxHeight="1.7976931348623157E308" minHeight="200.0" prefHeight="500.0" vgrow="ALWAYS"/>
      <RowConstraints maxHeight="-Infinity" minHeight="-Infinity" prefHeight="60.0" vgrow="SOMETIMES"/>
  </rowConstraints>
   <children>
       <GridPane maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefHeight="60.0"
                 snapToPixel="false" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.vgrow="NEVER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="-Infinity" prefHeight="60.0" vgrow="SOMETIMES"/>
        </rowConstraints>
           <children>
               <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#launchOrderScreen"
                       prefHeight="60.0" prefWidth="160.0" text="Order"/>
               <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#launchInvoiceScreen"
                       prefHeight="60.0" prefWidth="160.0" text="Invoice" GridPane.columnIndex="1"/>
               <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#launchStockScreen"
                       prefHeight="60.0" prefWidth="160.0" text="Stock" GridPane.columnIndex="2"/>
               <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#launchAdminScreen"
                       prefHeight="60.0" prefWidth="160.0" text="Admin" GridPane.columnIndex="3"/>
               <Button disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" prefHeight="60.0"
                       prefWidth="160.0" text="History" GridPane.columnIndex="4"/>
         </children>
      </GridPane>
       <TableView fx:id="historyTable" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
                  prefHeight="200.0" prefWidth="200.0" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1"
                  GridPane.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="rowID" editable="false" prefWidth="161.0" text="ID"/>
            <TableColumn fx:id="rowDate" editable="false" minWidth="0.0" prefWidth="158.0" text="Date"/>
            <TableColumn fx:id="rowTime" editable="false" prefWidth="160.0" text="Time"/>
            <TableColumn fx:id="rowOrder" editable="false" prefWidth="158.0" text="Order "/>
            <TableColumn fx:id="rowAction" editable="false" prefWidth="158.0" text="Action"/>
        </columns>
      </TableView>
       <GridPane>
           <columnConstraints>
               <ColumnConstraints hgrow="NEVER"/>
               <ColumnConstraints hgrow="NEVER"/>
               <ColumnConstraints/>
               <ColumnConstraints hgrow="ALWAYS"/>
               <ColumnConstraints/>
           </columnConstraints>
           <rowConstraints>
               <RowConstraints maxHeight="-Infinity"/>
           </rowConstraints>
           <children>
               <DatePicker fx:id="historyStartDatePicker" onAction="#updateSelectableEndDates"
                           onShowing="#setStartDateUpdater" promptText="Start Date"/>
               <DatePicker fx:id="historyEndDatePicker" onAction="#updateSelectableStartDates"
                           onShowing="#setEndDateUpdater" promptText="End Date" GridPane.columnIndex="1"/>
               <TextField fx:id="historySearchbar" onKeyTyped="#updateVisibleOrders" promptText="Order ID search bar"
                          GridPane.columnIndex="2"/>
               <Button mnemonicParsing="false" onAction="#addPastOrder" text="Add Past Order" GridPane.columnIndex="4"/>
           </children>
           <GridPane.margin>
               <Insets/>
           </GridPane.margin>
       </GridPane>
   </children>
</GridPane>
