<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="200.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8"
            fx:controller="seng202.group5.gui.ConfirmRefundController">
    <center>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" prefWidth="600.0"/>
                <ColumnConstraints hgrow="NEVER" minWidth="10.0" prefWidth="600.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Label fx:id="infoLabel" alignment="CENTER" text="Are you sure you want to refund Order #####?"
                       GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.valignment="BOTTOM">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </Label>
                <Button fx:id="yesButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                        onAction="#confirmOrder" text="Yes" GridPane.halignment="RIGHT" GridPane.rowIndex="1"
                        GridPane.valignment="TOP">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </Button>
                <Button fx:id="noButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                        onAction="#rejectOrder" text="No" GridPane.columnIndex="1" GridPane.halignment="LEFT"
                        GridPane.rowIndex="1" GridPane.valignment="TOP">
                    <GridPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </GridPane.margin>
                </Button>
            </children>
        </GridPane>
    </center>
</BorderPane>
